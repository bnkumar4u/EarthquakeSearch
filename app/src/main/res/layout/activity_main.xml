<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingEnd="6dp"
        android:paddingRight="6dp"
        android:paddingStart="16dp"
        android:paddingTop="4dp">
        <EditText
            android:id="@+id/edit_mag"
            android:hint="Mag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:paddingRight="10dp"
            />
        <EditText
            android:id="@+id/edit_limit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="limit"
            android:paddingRight="10dp"
            android:inputType="number"/>
        <Button
            android:onClick="searchButtonClick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Search"/>
    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    tools:context="com.example.android.earthquakesearch.MainActivity">

    <ListView
        android:id="@+id/list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="0dp"/>

    <!-- Empty view is only visible when the list has no items. -->
    <TextView
        android:id="@+id/empty_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="?android:textAppearanceMedium"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>
    <RadioGroup
        android:padding="4dp"
        android:id="@+id/radio_sort"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/radio_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="time"
            android:checked="true"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/radio_timeasc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="time_asc"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/radio_mag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="mag"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/radio_magasc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="mag_asc"
            android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>